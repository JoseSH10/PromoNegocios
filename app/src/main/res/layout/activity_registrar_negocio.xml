<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Negocio"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNombreNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Negocio"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etCalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calle"
            android:inputType="textCapWords"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número"
            android:inputType="number"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Nuevo botón para seleccionar imagen -->
        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"/>

        <!-- ImageView para vista previa de la imagen -->
        <ImageView
            android:id="@+id/ivImagenPrevia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:visibility="gone"
            android:contentDescription="Vista previa de la imagen del negocio"/>

        <Button
            android:id="@+id/btnRegistrarNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar solicitud"
            android:layout_marginTop="24dp"
            android:backgroundTint="#5F52A0"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>